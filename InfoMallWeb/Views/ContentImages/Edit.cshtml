@model InfoMallWeb.Dtos.ContentImageDto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>ContentImageDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.ContentImageId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContentImageId" />
            <input type="hidden" asp-for="OldImage" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraData" class="control-label"></label>
                <input asp-for="ExtraData" class="form-control" />
                <span asp-validation-for="ExtraData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">Change Content Image</label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentForTabId" class="control-label">Content Title</label>
                <select asp-for="ContentForTabId" class="form-control" asp-items="ViewBag.Category"></select>
                <span asp-validation-for="ContentForTabId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

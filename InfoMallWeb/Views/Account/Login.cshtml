@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager

@model InfoMallWeb.Models.AccountViewModels.LoginViewModel

<section class="banner-bottom py-5">
    <div class="margin-top-70"></div>
    <div class="container-fluid no-padding-left-blog no-padding-right">
        <div class="row no-margin-both">
            <div class="col-md-12 main_grid_contact bg-light no-light-mobile">
                <div class="form_div">
                    <div class="login-page">
                        <div class="login_form">
                            <p class="text-center">Please enter the email address you gave to us to slide in on your own</p>
                            <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="login-form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="Email" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input type="hidden" asp-for="RememberMe" value="true"/>
                                @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" /> Remember Me?
                </label>
            </div>*@
                                <button type="submit" class="full-width">Proceed</button>
                                <p class="font-size-16">New? <a asp-action="Register" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]">Just a bit of information</a></p>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //contact -->
</section>






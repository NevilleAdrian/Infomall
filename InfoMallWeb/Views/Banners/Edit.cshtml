@model InfoMallWeb.Dtos.BannerInformationDto

@{
	ViewData["Title"] = "Edit";
}

<h1>Create</h1>

<h4>BannerInformationDto</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" asp-route-id="@Model.BannerId" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="BannerId"/>
			<input type="hidden" asp-for="OldImage"/>
			<div class="form-group">
				<label asp-for="BannerContent" class="control-label"></label>
				<input asp-for="BannerContent" class="form-control" />
				<span asp-validation-for="BannerContent" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryForTabId" class="control-label">Category Name</label>
				<select asp-for="CategoryForTabId" class="form-control" asp-items="ViewBag.Category"></select>
				<span asp-validation-for="CategoryForTabId" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="ShowBannerOnHome" /> @Html.DisplayNameFor(model => model.ShowBannerOnHome)
				</label>
			</div>
			<div class="form-group">
				<label asp-for="File" class="control-label">Change this banner image</label>
				<input asp-for="File" class="form-control" />
				<span asp-validation-for="File" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ExtraInformation" class="control-label"></label>
				<input asp-for="ExtraInformation" class="form-control" />
				<span asp-validation-for="ExtraInformation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
